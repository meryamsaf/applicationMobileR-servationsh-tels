<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ViewHotelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/single_view_image_Hot"
            android:layout_width="400dp"
            android:layout_height="295dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/single_view_nomHot"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/inputbackgroundd"
            android:gravity="center"
            android:text="HotelName"
            android:textColor="#02272C"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/single_view_villeHotel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/inputbackgroundd"
            android:gravity="center"
            android:text="HotelCity"
            android:textColor="#02272C"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/single_view_hotelDetails"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/inputbackgroundd"
            android:gravity="center"
            android:text="HotelDetails"
            android:textColor="#02272C"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/single_view_hotelLocation"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/inputbackgroundd"
            android:gravity="center"
            android:text="HotelLocation"
            android:textColor="#02272C"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/addBtnReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn"
            android:text="Add Reservation"
            android:textColor="#02272C"
            android:textSize="20dp"
            android:textStyle="bold|italic" />
        />

    </LinearLayout>


</RelativeLayout>