<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hotell"
    tools:context=".ProfileClientActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="360dp"
        android:layout_height="86dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nameClient"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/mailClient"
            android:layout_width="219dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="408dp"
        android:layout_height="95dp"
        android:layout_marginLeft="22dp"

        android:layout_marginTop="98dp"
        android:layout_marginRight="22dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/ajouterReservation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_color"
            android:textColor="@color/colorWhite"
            android:text="Réserver un hotel"
            android:textSize="18dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/chercherHotel"
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_color"
            android:text="Chercher un hotel"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="408dp"
        android:layout_height="93dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="22dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/mesReservation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mes réservations"
            android:background="@drawable/background_color"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recommandations"
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Recommandations"
            android:background="@drawable/background_color"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="88dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="22dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <Button
            android:id="@+id/notification"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Notifications"
            android:background="@drawable/background_color"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/seDeconnecter"
            android:layout_width="219dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Se déconnecter"
            android:background="@drawable/background_color"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>